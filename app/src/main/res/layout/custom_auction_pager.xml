<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:padding="5dp"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/auction_fish_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitXY"
            android:src="@drawable/ic_default_background_banner" />

        <TextView
            android:id="@+id/auction_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/auction_string"
            android:textColor="@color/app_black"
            android:textSize="@dimen/extra_large" />

        <TextView
            android:id="@+id/auction_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/auction_string"
            android:textColor="@color/app_black"
            android:textSize="@dimen/large" />

        <Button
            android:id="@+id/auction_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/app_blue"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:text="@string/auction_apply_string"
            android:textColor="@android:color/white"
            android:textSize="@dimen/extra_large"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/auction_input_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="3">

            <EditText
                android:id="@+id/auction_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/rectangular_border_blue"
                android:hint="@string/taka_string"
                android:inputType="number"
                android:textAlignment="center"
                android:textColor="@color/app_blue"
                android:textColorHint="@color/app_hint"
                android:textSize="@dimen/medium" />

            <Button
                android:id="@+id/auction_submit"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:background="@color/app_blue"
                android:text="@string/sure_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/small"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/app_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:text="@string/auction_time_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/auction_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:text="@string/time_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/extra_large"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/app_blue"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:text="@string/auction_max_price_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/auction_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/app_blue"
                android:text="০৳"
                android:textColor="@android:color/white"
                android:textSize="@dimen/extra_large"
                android:textStyle="bold" />

        </LinearLayout>
        <!--<Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/app_blue"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/extra_large"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/app_blue"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/extra_large"
            android:textStyle="bold" />-->

    </LinearLayout>
</ScrollView>