<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Auction_Confirmation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <TextView
                android:id="@+id/auction_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="@string/auction_confirm_string"
                android:textAlignment="center"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/extra_large"
                android:textStyle="bold" />

            <Button
                android:id="@+id/auction_apply_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:background="@color/app_blue"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="@string/auction_again_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/extra_large"
                android:textStyle="bold" />
            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="5dp"
                android:background="@color/app_blue"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:text="@string/auction_message_price_string"
                android:textColor="@android:color/white"
                android:textSize="@dimen/extra_large"
                android:textStyle="bold"
                android:textAlignment="center"/>-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/auction_pager"
            android:layout_marginBottom="52dp"
            android:background="@drawable/drop_shadow_inverse" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/app_blue">

            <RelativeLayout
                android:id="@+id/rl_cart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp">

                <!-- Menu Item Image -->
                <ImageView
                    android:id="@+id/auction_cart"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/zero_string"
                    android:padding="5dp"
                    android:src="@drawable/ic_cart" />

                <!-- Badge Count -->
                <TextView
                    android:id="@+id/auction_cart_textview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/round_white"
                    android:gravity="center"
                    android:text="@string/zero_string"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small" />

            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>