<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/seller_custom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="@string/seller_profile_rate_string"
            android:textColor="@color/app_blue"
            android:textSize="@dimen/extra_large" />

        <RatingBar
            android:id="@+id/seller_custom_ratting"
            style="?android:attr/ratingBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|center"
            android:background="@color/app_white"
            android:numStars="5"
            android:rating="3"
            android:stepSize="1"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/seller_review_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/seller_profile_review_string"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColorHint="@color/app_hint" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</FrameLayout>