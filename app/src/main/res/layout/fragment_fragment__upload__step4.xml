<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragment_Upload_Step4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/upload_image_4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="30dp"
                android:contentDescription="@string/menu_sell"
                android:scaleType="fitXY"
                android:src="@drawable/ic_default_background_banner" />
            <FrameLayout
                android:id="@+id/video_view"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="30dp">
                <ImageView
                    android:id="@+id/upload_video_4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="@string/menu_sell"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_default_background_banner" />
                <ImageView
                    android:id="@+id/VideoPreviewPlayButton"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play_button"
                    android:backgroundTint="@color/app_blue"/>
            </FrameLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="5dp"
                app:contentPadding="5dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/cart_name_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/extra_large"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_description_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_category_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_price_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_quantity_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_name_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/extra_large"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_minimum_quantity_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_min_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/cart_upozilla_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_upozila"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_sell_type_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_selltype"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="0dp">
                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:text="@string/step1_frozen_string"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_hint"
                            android:textSize="@dimen/extra_large"/>
                        <TextView
                            android:id="@+id/step4_fish_frozen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:paddingStart="10dp"
                            android:paddingTop="0dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="0dp"
                            android:textAlignment="textStart"
                            android:textColor="@color/app_blue"/>
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/upload_next4"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="end"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rectangular_blue_white"
                android:text="@string/forget_button_hint"
                android:textAlignment="center"
                android:textColor="@color/app_white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>