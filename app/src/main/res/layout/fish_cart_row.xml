<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <Button
        android:id="@+id/card_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_delete"
        android:layout_marginEnd="5dp"/>

    <ImageView
        android:id="@+id/cart_image_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fish" />

    <TextView
        android:id="@+id/cart_fish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:text="@string/history_name_string"
        android:textAlignment="textStart"
        android:textColor="@color/app_black" />

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/card_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cart_minus"
            android:tint="@color/app_blue" />

        <TextView
            android:id="@+id/cart_fish_quantity"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/zero_string"
            android:textAlignment="center"
            android:textColor="@color/app_black"
            android:textSize="@dimen/medium" />

        <ImageView
            android:id="@+id/card_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_cart_plus"
            android:tint="@color/app_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/cart_fish_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:text="@string/zero_string"
        android:textAlignment="viewEnd"
        android:textColor="@color/app_black" />


</LinearLayout>